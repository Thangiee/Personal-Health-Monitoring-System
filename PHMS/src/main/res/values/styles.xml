<resources>

    <style name="AppTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="textAppearanceFinish">@style/TextAppearanceFinish</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_item_background</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="TextAppearanceFinish" parent="@style/TextAppearance.Sherlock.Small">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonBarButton">
        <item name="android:minHeight">@dimen/list_item_height_small</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/green_stripe_pattern</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Google Now style -->
    <style name="Now_extras"/>

    <style name="Now_extras.card_expand_inner_layout">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Now_extras.card_expand_inner_layout.light_gray">
        <item name="android:background">#515254</item>
        <item name="android:textColor">#B3B2B2</item>
    </style>

    <style name="Now_extras.card_expand_inner_layout.light_gray.bold">
        <item name="android:background">#4A4B4D</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Now_extras.card_expand_inner_layout.dark">
        <item name="android:background">#4A4B4D</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Now_extras.card_expand_inner_layout.dark.bold" parent="@style/Now_extras.card_expand_inner_layout.dark">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_btn">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/blue_btn_bg</item>
        <item name="android:textColor">@color/default_color</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Inner card -->
    <style name="inner_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
    </style>

    <style name="inner_title.sub">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="suggestion_drop_down" parent="android:Widget.DropDownItem">
        <item name="android:textColor">@color/default_color</item>
        <item name="android:background">@color/slide_menu_header_background</item>
    </style>

    <!-- Weight log screen -->
    <style name="weight_log_stats_title">
        <item name="android:textColor">#A19C9A</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>
    <!---->

    <style name="divider">
        <item name="android:layout_height">0.4dp</item>
        <item name="android:background">#82a19c9a</item>
    </style>

    <!-- Tab page indicators -->
    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <!---->
</resources>
