<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


    <TextView
            android:id="@+id/card_inner_txt_title"
            style="@style/inner_title"
            android:text="Title"
            android:layout_marginTop="3dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/card_inner_txt_sub"
            style="@style/inner_title.sub"
            android:text="SubTitle"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/card_inner_txt_title"
            android:layout_marginBottom="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ImageButton
            android:id="@+id/card_inner_txt_btn"
            style="@style/inner_title"
            android:textSize="14sp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:src="@drawable/ic_action_goright"
            android:background="@drawable/selectable_item_background"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    <!--  <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/imageButton" android:layout_centerVertical="true"
              android:background="@drawable/ic_action_webgo"
              android:layout_alignRight="@+id/card_inner_txt_btn" android:layout_alignEnd="@+id/card_inner_txt_btn"/>
  -->
</RelativeLayout>