<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:stretchColumns="1,3"
             android:layout_height="wrap_content"
             android:layout_column="2">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                android:text="Calories(kcal):"
                android:id="@+id/frag_food_expand_lbl_cal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                android:text="0"
                android:id="@+id/frag_food_expand_txt_cal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:maxWidth="20dp"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                  android:text="Fats(g):"
                  android:id="@+id/frag_food_expand_lbl_fat"
                  android:paddingLeft="10dp"
                  android:paddingRight="5dp"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:gravity="right"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                  android:text="0"
                  android:id="@+id/frag_food_expand_txt_fat"
                  android:paddingBottom="5dp"
                  android:paddingTop="5dp"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                android:text="# Servings(g):"
                android:id="@+id/frag_food_expand_lbl_ser"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                android:text="0"
                android:id="@+id/frag_food_expand_txt_ser"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:maxWidth="20dp"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                  android:text="Fibers(g):"
                  android:id="@+id/frag_food_expand_lbl_fiber"
                  android:paddingLeft="10dp"
                  android:paddingRight="5dp"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:gravity="right"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                  android:text="0"
                  android:id="@+id/frag_food_expand_txt_fiber"
                  android:paddingBottom="5dp"
                  android:paddingTop="5dp"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                android:text="Proteins(g):"
                android:id="@+id/frag_food_expand_lbl_protein"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                android:text="0"
                android:id="@+id/frag_food_expand_txt_protein"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:maxWidth="20dp"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                  android:text="Sugars(g):"
                  android:id="@+id/frag_food_expand_lbl_sugar"
                  android:paddingLeft="10dp"
                  android:paddingRight="5dp"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:gravity="right"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                  android:text="0"
                  android:id="@+id/frag_food_expand_txt_sugar"
                  android:paddingBottom="5dp"
                  android:paddingTop="5dp"/>
    </TableRow>
</TableLayout>