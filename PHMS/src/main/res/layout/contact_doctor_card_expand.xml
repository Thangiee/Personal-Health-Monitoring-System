<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                style="@style/Now_extras.card_expand_inner_layout.dark"
                android:layout_height="wrap_content">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_background"
            android:text="New Button"
            android:src="@drawable/ic_device_access_call"
            android:id="@+id/phone_img_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_background"
            android:text="New Button"
            android:src="@drawable/ic_social_chat"
            android:id="@+id/chat_img_btn"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/phone_img_btn"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_background"
            android:text="New Button"
            android:src="@drawable/ic_content_edit"
            android:id="@+id/edit_img_btn"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/chat_img_btn"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_background"
            android:text="New Button"
            android:src="@drawable/ic_content_discard"
            android:id="@+id/trash_img_btn"
            android:layout_above="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <View
            android:layout_width="fill_parent"
            style="@style/divider"
            android:layout_alignBottom="@+id/phone_img_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/view"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,3"
            android:layout_below="@+id/phone_img_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                    android:text="Phone Number:"
                    android:id="@+id/frag_food_expand_lbl_cal"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                    android:text="N/a"
                    android:id="@+id/doctor_card_expand_phone"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:maxWidth="40dp"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                    android:text="Email Address:"
                    android:id="@+id/frag_food_expand_lbl_ser"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                    android:text="N/a"
                    android:id="@+id/doctor_card_expand_email"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:maxWidth="40dp"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                    android:text="Hospital:"
                    android:id="@+id/frag_food_expand_lbl_protein"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                    android:text="N/a"
                    android:id="@+id/doctor_card_expand_hospital"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:maxWidth="40dp"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow">

            <TextView
                    style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:id="@+id/textView"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"/>

            <TextView
                    style="@style/Now_extras.card_expand_inner_layout.dark.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/a"
                    android:id="@+id/doctor_card_expand_address"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:maxWidth="40dp"/>

        </TableRow>
    </TableLayout>
</RelativeLayout>