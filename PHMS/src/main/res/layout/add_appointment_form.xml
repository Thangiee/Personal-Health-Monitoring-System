<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_view_btn"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select doctor"
            android:layout_marginTop="4dp"
            android:padding="12dp"
            android:id="@+id/add_appointment_select_btn"
            android:layout_gravity="center_horizontal"/>

    <com.andreabaccega.widget.FormEditText
            android:id="@+id/add_appointment_doc_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="Doctor Name"
            android:editable="false"
            android:enabled="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    <com.andreabaccega.widget.FormEditText
            android:id="@+id/add_appointment_doc_Phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:editable="false"
            android:enabled="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    <com.andreabaccega.widget.FormEditText
            android:id="@+id/add_appointment_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Location"
            android:editable="false"
            android:enabled="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    <com.andreabaccega.widget.FormEditText
            android:id="@+id/add_appointment_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Time"
            android:editable="false"
            android:enabled="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    <EditText
            android:id="@+id/add_appointment_purpose"
            android:descendantFocusability="beforeDescendants"
            android:inputType="textMultiLine|textCapWords"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:hint="Purpose:"
            android:scrollbars="vertical"
            android:layout_marginTop="16dp"/>

</LinearLayout>