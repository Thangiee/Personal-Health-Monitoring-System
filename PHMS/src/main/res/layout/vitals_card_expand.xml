<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:stretchColumns="1,3"
             android:layout_height="wrap_content"
             android:background="@drawable/gray_stripe_pattern"
             android:layout_column="2">

<TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
            android:text="Blood Pressure:"
            android:id="@+id/frag_vital_expand_BP"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="right"
            android:textSize="11dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Now_extras.card_expand_inner_layout.white"
            android:text="0"
            android:textSize="11dp"
            android:id="@+id/frag_vital_expand_txt_bp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:maxWidth="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
            android:text="Pulse:"
            android:id="@+id/frag_Vital_expand_P"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="11dp"
            android:gravity="right"
            android:paddingRight="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Now_extras.card_expand_inner_layout.white"
            android:text="0"
            android:textSize="11dp"
            android:id="@+id/frag_vital_expand_txt_p"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:maxWidth="40dp"/>
</TableRow>
<TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
            android:text="Cholesterol:"
            android:id="@+id/frag_Vital_expand_C"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="11dp"
            android:gravity="right"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Now_extras.card_expand_inner_layout.white"
            android:text="0"
            android:textSize="11dp"
            android:id="@+id/frag_vital_expand_txt_c"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:maxWidth="40dp"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
              android:text="Body Temp:"
              android:id="@+id/frag_Vital_expand_BT"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:textSize="11dp"
              android:gravity="right"
              android:paddingRight="5dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Now_extras.card_expand_inner_layout.white"
              android:text="0"
              android:textSize="11dp"
              android:id="@+id/frag_vital_expand_txt_bt"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"/>
</TableRow>
<TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@style/Now_extras.card_expand_inner_layout.light_gray.bold"
              android:text="Glucose Level:"
              android:id="@+id/frag_Vital_expand_GL"
              android:paddingLeft="10dp"
              android:paddingRight="5dp"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:textSize="11dp"
              android:gravity="right"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Now_extras.card_expand_inner_layout.white"
              android:text="0"
              android:textSize="11dp"
              android:id="@+id/frag_vital_expand_txt_gl"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"/>
</TableRow>
</TableLayout>