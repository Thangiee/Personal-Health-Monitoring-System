<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/card_title"
            android:id="@+id/inner_card_reminder_title"
            android:text="Title"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="dasiundisuniuds fndiufn iuasdnf iuasd aaaaaaaa sadsad"
            android:lines="2"
            android:layout_below="@+id/inner_card_reminder_time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/inner_card_reminder_msg"
            android:layout_toLeftOf="@+id/inner_card_reminder_btn"/>

    <TextView
            android:layout_width="1dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:background="@color/light_gray"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/inner_card_reminder_title"
            android:layout_alignBottom="@+id/inner_card_reminder_msg"
            android:layout_toLeftOf="@+id/inner_card_reminder_btn"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="12:40"
            android:id="@+id/inner_card_reminder_time"
            android:layout_below="@+id/inner_card_reminder_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inner_card_reminder_btn"
            android:src="@drawable/dismiss_btn"
            android:layout_below="@+id/inner_card_reminder_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>